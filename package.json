{
  "name": "fee-collector-scanner",
  "version": "1.0.0",
  "description": "Smart Contract Fee Event Scanner for EVM chains",
  "main": "dist/app.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/app.ts",
    "build": "tsc",
    "start": "node dist/app.js",
    "lint": "eslint src/**/*.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.js --coverage",
    "docker:build": "docker build -t fee-collector-scanner .",
    "docker:run": "docker run -p 3000:3000 fee-collector-scanner"
  },
  "dependencies": {
    "@typegoose/typegoose": "^9.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "mongoose": "^6.7.2",
    "node-cron": "^3.0.3",
    "typescript-eslint": "^8.33.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.54.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/supertest": "^2.0.16",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.3.4",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "testMatch": [
      "**/__tests__/**/*.ts",
      "**/?(*.)+(spec|test).ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/app.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "polygon",
    "smart-contract",
    "event-scanner",
    "typescript",
    "backend",
    "api"
  ],
  "author": "Fee Collector Team",
  "license": "MIT"
}
